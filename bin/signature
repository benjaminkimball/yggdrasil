#!/usr/bin/env bash

RED='\033[0;31m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
RESET='\033[0m'

print_signature() {
  if [[ $* != *--no-signature* ]]; then
    echo
    echo
    printf "${RED}▄▀▀▄ ▀▀▄  ▄▀▀▀▀▄    ▄▀▀▀▀▄   ▄▀▀█▄▄   ▄▀▀▄▀▀▀▄  ▄▀▀█▄   ▄▀▀▀▀▄  ▄▀▀█▀▄   ▄▀▀▀▀▄\n"
    printf "${YELLOW}█   ▀▄ ▄▀ █         █        █ ▄▀   █ █   █   █ ▐ ▄▀ ▀▄ █ █   ▐ █   █  █ █    █\n"
    printf "${GREEN}▐     █   █    ▀▄▄  █    ▀▄▄ ▐ █    █ ▐  █▀▀█▀    █▄▄▄█    ▀▄   ▐   █  ▐ ▐    █\n"
    printf "${CYAN}      █   █     █ █ █     █ █  █    █  ▄▀    █   ▄▀   █ ▀▄   █      █        █\n"
    printf "${BLUE}    ▄▀    ▐▀▄▄▄▄▀ ▐ ▐▀▄▄▄▄▀ ▐ ▄▀▄▄▄▄▀ █     █   █   ▄▀   █▀▀▀    ▄▀▀▀▀▀▄   ▄▀▄▄▄▄▄▄▀\n"
    printf "${MAGENTA}    █     ▐         ▐        █     ▐  ▐     ▐   ▐   ▐    ▐      █       █  █\n"
    printf "${MAGENTA}    ▐                        ▐                                  ▐       ▐  ▐${RESET}\n"
    echo
  else
    echo
  fi
}
