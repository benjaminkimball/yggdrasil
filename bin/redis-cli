#!/usr/bin/env bash

CURRENT_DIR=`basename $(pwd)`
CONTAINER=`docker ps --filter name="$CURRENT_DIR-redis" --format "{{.Names}}"`

if [[ $* == *--no-signature* ]]; then
  echo
else
  source ./bin/signature
fi

echo "============================================================"
echo "> Connecting to $CONTAINER..."
echo

docker exec -it $CONTAINER redis-cli
